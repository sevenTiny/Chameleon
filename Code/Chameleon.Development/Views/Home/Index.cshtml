@using Chameleon.Entity;
@using Chameleon.Infrastructure.Extensions;
@{
    Layout = null;
    ViewData["Title"] = "Home Page";
    var entities = (ViewData["CloudApplicationList"] as List<CloudApplication>) ?? new List<CloudApplication>(0);

    //拆成三个一组
    var spliteEntities = entities.SplitRange(3);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Bootstrap 4-->
    <link href="~/lib/syrup/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
</head>
<body>
    <!--hero section-->
    <section class="bg-white hero p-0">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-5 bg-light text-center col-fixed">
                    <h1 class="pt-4 h2"><span class="text-green">Chameleon</span></h1>
                    <h3>让一切简单起来</h3>
                    <p class="mt-4">
                        We build beautiful things for <br />creative people.
                    </p>
                    <div class="launch-text">We're launching soon.</div>
                </div>
                <div class="col-sm-7 offset-sm-5 px-0 py-5">
                    <!--Why This Domain-->
                    <section class="pt-4">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-sm-8 mx-auto text-center">
                                    <h2 class="text-primary pb-3">系统应用</h2>
                                    <p class="text-muted">
                                        Applications.
                                    </p>
                                </div>
                            </div>
                            @foreach (var item in spliteEntities)
                            {
                                <div class="row d-md-flex mt-4">
                                    @foreach (var entity in item)
                                    {
                                        string icon = string.IsNullOrEmpty(entity.Icon) ? "cloud" : entity.Icon;
                                        <div class="col-sm-4 mt-2 text-center">
                                            <div style="background:#ebe8e8;padding:10px;height:150px;cursor:pointer;" onclick="window.location='/CloudApplication/Detail?applicationId=@entity.Id&applicationCode=@entity.Code'" title="选择应用">
                                                <p><em class="ion-code-working icon-md text-purple"><span class="fa fa-@icon"></span></em></p>
                                                <h4>@entity.Name</h4>
                                                <p class="text-muted">@entity.Code<br />@entity.Description</p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </section>
                    <section class="mt-2">
                        <div class="container">
                            <div class="row mr-5 ml-5">
                                <div class="col-sm-12">
                                    <p class="text-muted text-center">
                                        &copy; 2020 Syrup Theme - All Rights Reserved.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </section>
</body>
</html>