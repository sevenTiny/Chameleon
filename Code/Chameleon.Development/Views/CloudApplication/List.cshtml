@using Chameleon.Entity;
@{
    Layout = "~/Views/Shared/_LayoutHeaderStyle.cshtml";
    ViewData["Title"] = "List";

    List<CloudApplication> applications = Model as List<CloudApplication> ?? new List<CloudApplication>();
}
@{
    ViewData["Level_1"] = "应用管理";
    ViewData["Level_2"] = "应用列表";
}
@await Html.PartialAsync("~/Views/Shared/_PartialNavigation.cshtml")

<link href="~/lib/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
<article class="cl pd-20">
    <div class="cl pd-5 bg-1 bk-gray">
        <span class="l">
            <a class="btn btn-secondary-outline radius" href="javascript:window.location='/Home/Index';"><i class="Hui-iconfont">&#xe66b;</i> 返回</a>
            <a class="btn btn-primary radius" href="/CloudApplication/Add"><i class="Hui-iconfont">&#xe600;</i> 添加应用</a>
        </span>
        <span class="r">共有数据：<strong>@applications.Count</strong> 条</span>
    </div>
    <div class="mt-20">
        <table class="table table-border table-bordered table-bg table-hover table-sort table-responsive">
            <thead>
                <tr class="text-c">
                    <th>ID</th>
                    <th>图标</th>
                    <th>名称</th>
                    <th>编码</th>
                    <th>描述</th>
                    <th>排序</th>
                    <th>状态</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in applications)
                {
                    <tr class="text-c">
                        <td>@item.Id</td>
                        @{
                            string icon = string.IsNullOrEmpty(item.Icon) ? "cloud" : item.Icon;
                            <td><span class="fa fa-@icon"></span></td>
                        }
                        <td><a href="javascript:window.parent.location.href='/CloudApplication/Detail?applicationId=@item.Id&applicationCode=@item.Code';" class="text-primary" title="切换应用" data-toggle="tooltip" data-placement="top">@item.Name</a></td>
                        <td>@item.Code</td>
                        <td>@item.Description</td>
                        <td>@item.SortNumber</td>
                        <td class="td-status"><span class="label label-success radius">发布</span></td>
                        <td class="f-14 td-manage">
                            <a style="text-decoration: none" class="ml-5" href="/CloudApplication/Update/@item.Id" title="编辑" data-toggle="tooltip" data-placement="top"><i class="Hui-iconfont">&#xe6df;</i></a>
                            <a style="text-decoration: none" class="ml-5" onClick="ajax_delete_table(this,  '/CloudApplication/LogicDelete/@item.Id')" href="javascript:;" title="删除" data-toggle="tooltip" data-placement="top"><i class="Hui-iconfont">&#xe6e2;</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br />
</article>

@await Html.PartialAsync($"~/Views/Shared/_FooterScripts.cshtml")
@await Html.PartialAsync($"~/Views/Shared/_CommonScript.cshtml")
<script type="text/javascript" src="~/lib/datatables/1.10.0/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $('.table-sort').dataTable({
        "aLengthMenu": [[50, 100, -1], ["50", "100", "All"]],//二组数组，第一组数量
        "aaSorting": [[5, "asc"], [0, "asc"]],//默认第几个排序
        "bStateSave": true,//状态保存
        "aoColumnDefs": [
            { "orderable": false, "aTargets": [1, 7] }// 不参与排序的列
        ]
    });
</script>
