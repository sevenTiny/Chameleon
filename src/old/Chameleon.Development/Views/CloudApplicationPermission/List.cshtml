@using Chameleon.Entity;
@{
    Layout = "~/Views/Shared/_LayoutHeaderStyle.cshtml";
    ViewData["Title"] = "List";

    List<CloudApplicationPermission> entities = Model as List<CloudApplicationPermission> ?? new List<CloudApplicationPermission>();
}
@{
    ViewData["Level_1"] = "应用权限管理";
    ViewData["Level_2"] = "授权列表";
}
@await Html.PartialAsync("~/Views/Shared/_PartialNavigation.cshtml")

<article class="cl pd-20">
    <div class="cl pd-5 bg-1 bk-gray">
        <span class="l">
            <a class="btn btn-primary radius" href="/CloudApplicationPermission/Add"><i class="Hui-iconfont">&#xe600;</i> 添加授权</a>
        </span>
        <span class="r">共有数据：<strong>@entities.Count</strong> 条</span>
    </div>
    <div class="mt-20">
        <table class="table table-border table-bordered table-bg table-hover table-sort table-responsive">
            <thead>
                <tr class="text-c">
                    <th>开发者</th>
                    <th>描述</th>
                    <th>状态</th>
                    <th>排序</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in entities)
                {
                <tr class="text-c">
                    <td>@item.UserEmail</td>
                    <td>@item.Description</td>
                    <td class="td-status"><span class="label label-success radius">授权中</span></td>
                    <td>@item.SortNumber</td>
                    <td class="f-14 td-manage">
                        <a style="text-decoration: none" class="ml-5" onClick="ajax_delete_table(this,  '/CloudApplicationPermission/Delete/@item.Id')" href="javascript:;" title="解除授权" data-toggle="tooltip" data-placement="top"><i class="Hui-iconfont">&#xe6e2;</i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <br />
</article>

@await Html.PartialAsync($"~/Views/Shared/_FooterScripts.cshtml")
@await Html.PartialAsync($"~/Views/Shared/_CommonScript.cshtml")
<script type="text/javascript" src="~/lib/datatables/1.10.0/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $('.table-sort').dataTable({
        "aLengthMenu": [[50, 100, -1], ["50", "100", "All"]],//二组数组，第一组数量
        "aaSorting": [[3, "asc"]],//默认第几个排序
        "bStateSave": true,//状态保存
        "aoColumnDefs": [
            { "orderable": false, "aTargets": [4] }// 不参与排序的列
        ]
    });
</script>
