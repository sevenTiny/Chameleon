@using Chameleon.Entity;
@using SevenTiny.Bantina.Extensions.AspNetCore;
@using Chameleon.Infrastructure;
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_LayoutHeaderStyle.cshtml";

    var result = Model as ResponseModel ?? new ResponseModel() { IsSuccess = true };
    var entity = result?.Data as InterfaceSetting ?? new InterfaceSetting();
}
@{
    ViewData["Level_1"] = "应用接口";
    ViewData["Level_2"] = "新增文件上传下载接口";
}
@await Html.PartialAsync("~/Views/Shared/_PartialNavigation.cshtml")

<article class="page-container">
    <form class="form form-horizontal validate" id="form-article-add" method="post" action="/InterfaceSetting/FileManagementAddLogic">
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>名称：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <input type="text" class="input-text" value="@entity.Name" placeholder="" name="name" required minLength="2" maxlength="50">
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>编码：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <input type="text" class="input-text" value="@entity.Code" placeholder="" name="code" required minLength="2" maxlength="50">
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>接口类型：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <span class="select-box">
                    <select name="InterfaceType" class="input select" onchange="interfaceTypeSwitch(this)" id="InterfaceType" required>
                        <option value="">--请选择--</option>
                        @foreach (var item in InterfaceTypeEnumHelper.GetFileManagementInterfaceServiceTypes())
                        {
                            <option value="@Convert.ToInt32(item)">@item.GetDescription()</option>
                        }
                    </select>
                </span>
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">文件扩展名限制：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <input type="text" class="input-text" value="@entity.FileExtensionLimit" placeholder=".jpg|.png|.gif|.zip 多个扩展名竖线分隔" name="FileExtensionLimit">
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">文件大小限制：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <span class="select-box">
                    <select name="FileSizeLimit" class="input select" id="FileSizeLimit" required>
                        <option value="5242880">5MB</option>
                        <option value="10485760">10MB</option>
                        <option value="15728640">15MB</option>
                        <option value="20971520">20MB</option>
                        <option value="26214400">25MB</option>
                        <option value="31457280">30MB</option>
                        <option value="36700160">35MB</option>
                        <option value="41943040">40MB</option>
                        <option value="47185920">45MB</option>
                        <option value="52428800">50MB</option>
                    </select>
                </span>
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">分组：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <input type="text" class="input-text" value="@entity.Group" placeholder="" name="group">
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">排序值：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <input type="text" class="input-text" value="@entity.SortNumber" placeholder="" name="sortNumber">
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">描述：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <textarea name="description" class="textarea ignore" placeholder="说点什么...">@entity.Description</textarea>
            </div>
        </div>
        <div class="row cl">
            <div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-2">
                <input class="btn btn-primary radius" type="submit" value="&nbsp;&nbsp;提交&nbsp;&nbsp;">
                <button onClick="javascript:history.back(-1);" class="btn btn-default radius" type="button">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
                @if (!result.IsSuccess)
                {
                    <br /><br /><pre><span class="c-red">@result.Message</span></pre>
                }
            </div>
        </div>
    </form>
</article>

@await Html.PartialAsync("~/Views/Shared/_FooterScripts.cshtml")
@await Html.PartialAsync("~/Views/Shared/_CommonScript.cshtml")
@await Html.PartialAsync("~/Views/Shared/_FormValidate.cshtml")
<!--请在下方写此页面业务相关的脚本-->
<script type="text/javascript">
    $("#InterfaceType").val('@entity.InterfaceType')
    $("#FileSizeLimit").val('@entity.FileSizeLimit')
</script>
