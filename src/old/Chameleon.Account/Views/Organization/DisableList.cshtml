@using Chameleon.Entity;
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_LayoutHeaderStyle.cshtml";
    List<Organization> entities = Model as List<Organization> ?? new List<Organization>(0);
}
@{
    ViewData["Level_1"] = "组织管理";
    ViewData["Level_2"] = "停用的组织列表";
}
@await Html.PartialAsync("~/Views/Shared/_PartialNavigation.cshtml")

<article class="cl pd-20">
    <div class="cl pd-5 bg-1 bk-gray">
        <span class="r">共有数据：<strong>@entities.Count</strong> 条</span>
    </div>
    <div class="mt-20">
        <table class="table table-border table-bordered table-bg table-hover table-sort table-responsive">
            <thead>
                <tr class="text-c">
                    <th>ID</th>
                    <th>组织名称</th>
                    <th>修改时间</th>
                    <th>状态</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in entities)
                {
                    <tr class="text-c">
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.ModifyTime</td>
                        <td><span class="label label-default radius">停用</span></td>
                        <td class="f-14 td-manage">
                            <a style="text-decoration: none" class="ml-5" onClick="ajax_operate_table_confirm(this,'/Organization/EnableNode?nodeId=@item.Id','启用组织将同时启用组织的下级组织，确定启用？')" title="启用组织"><i class="Hui-iconfont">&#xe66b;</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</article>

@await Html.PartialAsync($"~/Views/Shared/_FooterScripts.cshtml")
@await Html.PartialAsync($"~/Views/Shared/_CommonScript.cshtml")
<script type="text/javascript" src="~/lib/datatables/1.10.0/jquery.dataTables.min.js"></script>
<!--请在下方写此页面业务相关的脚本-->
<script type="text/javascript">
    $('.table-sort').dataTable({
        "aLengthMenu": [[50, 100, -1], ["50", "100", "All"]],//二组数组，第一组数量，
        "aaSorting": [[2, "desc"]],//默认第几个排序
        "bStateSave": true,//状态保存
        "aoColumnDefs": [
            { "bVisible": false, "aTargets": [0] }, //控制列的隐藏显示
            { "orderable": false, "aTargets": [4] }// 不参与排序的列
        ]
    });
</script>
